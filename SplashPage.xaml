<Page x:Class="UWEKiosk.SplashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UWEKiosk"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1350"
      Title="SplashPage">
   
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image  Grid.Row="0"  HorizontalAlignment="Center" VerticalAlignment="Center" Source="C:\Users\Admin\source\repos\UWEKiosk\image\images.png" />
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="UWE Interactive Map System" Style="{StaticResource AppTitle}"/>
        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="300" Height="100" FontSize="30" Style="{StaticResource GelButton}" Click="Button_Click">Start</Button>
    </Grid>
</Page>
